@model IEnumerable<WebApplication1.Models.GNewsViewModel>



<img src="https://russiajapansociety.ru/wp-content/uploads/2018/07/news_logo.jpg" style="width:100%; border-radius:45px; margin-top:10px;"/>

@*@Html.Partial("_SearchNews")*@

@foreach (var item in Model)
{

    <div class="main-pice">

        <div class="some col-md-8">

        </div>
        <div class="left-pice">
            <img src="@(Url.Content(Constants.ProductImagePath)+item.Image)" />
        </div>
        <div class="right-pice">
            <div class="top-pice">
                <h2>
                    @Html.DisplayFor(modelItem => item.Title)
                </h2>
                <div class="content">
                    @Html.DisplayFor(modelItem => item.Description)
                </div>
            </div>
            <div class="down-pice">
                @Html.DisplayFor(modelItem => item.Country)

                @*@Html.DisplayFor(modelItem => item.Time)*@
                <button>                   
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </button>
            </div>
        </div>
    </div>

}